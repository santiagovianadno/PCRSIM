#!/usr/bin/env python3
"""
Visualizador de Basteria PLY con Control Dual de Manos (Modo Prueba)
- Mano derecha: Control de c√°mara (rotaci√≥n y zoom)
- Mano izquierda: Efectos visuales (color y opacidad)
"""

import pygame
from pygame.locals import *
from OpenGL.GL import *
from OpenGL.GLU import *
import numpy as np
import time
from ply_cell_renderer import PLYCellModel

class BasteriaViewer:
    def __init__(self, ply_file='basteria2.ply'):
        print('üî¨ Inicializando Visualizador Basteria...')
        
        # Inicializar Pygame
        pygame.init()
        
        # Configuraci√≥n de pantalla
        self.screen_width = 1200
        self.screen_height = 800
        self.screen = pygame.display.set_mode((self.screen_width, self.screen_height), DOUBLEBUF | OPENGL)
        pygame.display.set_caption('üî¨ Visualizador Basteria - Control Dual de Manos')
        
        # Configurar OpenGL
        self.setup_opengl()
        
        # Cargar modelo PLY
        print(f'üìÇ Cargando modelo: {ply_file}')
        self.model = PLYCellModel(ply_file)
        
        # Variables de c√°mara
        self.camera_distance = 15.0
        self.camera_rotation_x = 0.0
        self.camera_rotation_y = 0.0
        
        # Estados visuales
        self.model_color = [1.0, 1.0, 1.0]  # Color del modelo (RGB)
        self.model_opacity = 1.0  # Opacidad del modelo
        self.is_red_mode = False  # Si est√° en modo rojo
        
        # Simulaci√≥n de controles de mano
        self.simulate_hands = True
        self.time_offset = 0
        
        # Variables de mouse para control alternativo
        self.mouse_pressed = False
        self.last_mouse_pos = None
        
        print('‚úÖ Inicializaci√≥n completa')
    
    def setup_opengl(self):
        """Configura OpenGL"""
        glEnable(GL_DEPTH_TEST)
        glDepthFunc(GL_LESS)
        
        # Configurar perspectiva
        glMatrixMode(GL_PROJECTION)
        gluPerspective(45, (self.screen_width / self.screen_height), 0.1, 100.0)
        glMatrixMode(GL_MODELVIEW)
        
        # Color de fondo
        glClearColor(0.05, 0.05, 0.1, 1.0)
    
    def simulate_hand_controls(self):
        """Simula controles de mano para demostrar funcionalidad"""
        current_time = time.time() + self.time_offset
        
        # Simular mano derecha (controles de c√°mara)
        # Rotaci√≥n lenta autom√°tica
        self.camera_rotation_y += 0.5
        
        # Zoom oscilante
        zoom_factor = np.sin(current_time * 0.5) * 0.3
        self.camera_distance = 15.0 + zoom_factor * 10.0
        
        # Simular mano izquierda (efectos visuales)
        # Cambio de color peri√≥dico
        color_cycle = np.sin(current_time * 0.8)
        if color_cycle > 0.5:
            self.is_red_mode = True
            self.model_color = [1.0, 0.0, 0.0]  # Rojo
        else:
            self.is_red_mode = False
            self.model_color = [1.0, 1.0, 1.0]  # Blanco
        
        # Opacidad oscilante
        opacity_cycle = (np.sin(current_time * 1.2) + 1.0) / 2.0  # 0 a 1
        self.model_opacity = 0.3 + opacity_cycle * 0.7  # 0.3 a 1.0
    
    def handle_mouse_input(self):
        """Maneja entrada del mouse como control alternativo"""
        mouse_pos = pygame.mouse.get_pos()
        mouse_buttons = pygame.mouse.get_pressed()
        
        if mouse_buttons[0]:  # Bot√≥n izquierdo presionado
            if self.last_mouse_pos is not None:
                dx = mouse_pos[0] - self.last_mouse_pos[0]
                dy = mouse_pos[1] - self.last_mouse_pos[1]
                
                self.camera_rotation_y += dx * 0.5
                self.camera_rotation_x += dy * 0.5
        
        self.last_mouse_pos = mouse_pos if mouse_buttons[0] else None
        
        # Scroll para zoom
        keys = pygame.key.get_pressed()
        if keys[K_PLUS] or keys[K_EQUALS]:
            self.camera_distance = max(2.0, self.camera_distance - 0.5)
        if keys[K_MINUS]:
            self.camera_distance = min(50.0, self.camera_distance + 0.5)
    
    def render_model(self):
        """Renderiza el modelo PLY con color y opacidad din√°micos"""
        if len(self.model.vertices) > 0:
            # Configurar blending para opacidad
            glEnable(GL_BLEND)
            glBlendFunc(GL_SRC_ALPHA, GL_ONE_MINUS_SRC_ALPHA)
            
            # Aplicar color y opacidad global
            glColor4f(self.model_color[0], self.model_color[1], self.model_color[2], self.model_opacity)
            
            glEnableClientState(GL_VERTEX_ARRAY)
            
            glVertexPointer(3, GL_FLOAT, 0, self.model.vertices)
            
            glPointSize(2.0)
            glDrawArrays(GL_POINTS, 0, len(self.model.vertices))
            
            glDisableClientState(GL_VERTEX_ARRAY)
            
            glDisable(GL_BLEND)
    
    def render_ui(self):
        """Renderiza informaci√≥n en pantalla"""
        # Esta funci√≥n podr√≠a expandirse para mostrar UI en OpenGL
        pass
    
    def run(self):
        """Bucle principal"""
        try:
            clock = pygame.time.Clock()
            running = True
            
            print("üî¨ Visualizador Basteria con Control Dual de Manos iniciado (MODO PRUEBA)")
            print("üéÆ Controles:")
            print("\nü§ñ SIMULACI√ìN AUTOM√ÅTICA:")
            print("   - Rotaci√≥n autom√°tica del modelo")
            print("   - Zoom oscilante")
            print("   - Cambio de color autom√°tico (blanco ‚Üî rojo)")
            print("   - Opacidad variable")
            print("\n‚å®Ô∏è  Controles manuales:")
            print("   üñ±Ô∏è  Mouse: Arrastrar para rotar")
            print("   ‚ûï +/-: Zoom in/out")
            print("   üîÑ R: Reset c√°mara")
            print("   ‚è∏Ô∏è  ESPACIO: Pausar/reanudar simulaci√≥n")
            print("   üö™ ESC: Salir")
            print(f"\nüìä Mostrando {len(self.model.vertices):,} v√©rtices de tu basteria2.ply")
            print("üé≠ Observa los cambios autom√°ticos de color y opacidad")
            
            while running:
                for event in pygame.event.get():
                    if event.type == pygame.QUIT:
                        running = False
                    elif event.type == pygame.KEYDOWN:
                        if event.key == pygame.K_ESCAPE:
                            running = False
                        elif event.key == pygame.K_r:
                            # Reset c√°mara
                            self.camera_distance = 15.0
                            self.camera_rotation_x = 0.0
                            self.camera_rotation_y = 0.0
                            print("üîÑ C√°mara reiniciada")
                        elif event.key == pygame.K_SPACE:
                            # Pausar/reanudar simulaci√≥n
                            self.simulate_hands = not self.simulate_hands
                            if not self.simulate_hands:
                                self.time_offset = time.time() - self.time_offset
                            print(f"‚è∏Ô∏è  Simulaci√≥n: {'PAUSADA' if not self.simulate_hands else 'REANUDADA'}")
                    elif event.type == pygame.MOUSEWHEEL:
                        # Zoom con rueda del mouse
                        self.camera_distance = max(2.0, min(50.0, self.camera_distance - event.y))
                
                # Actualizar controles
                if self.simulate_hands:
                    self.simulate_hand_controls()
                
                self.handle_mouse_input()
                
                # Renderizar
                glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT)
                
                # Configurar c√°mara
                glLoadIdentity()
                glTranslatef(0, 0, -self.camera_distance)
                glRotatef(self.camera_rotation_x, 1, 0, 0)
                glRotatef(self.camera_rotation_y, 0, 1, 0)
                
                # Renderizar modelo
                self.render_model()
                self.render_ui()
                
                # Actualizar pantalla
                pygame.display.flip()
                clock.tick(60)
                
        except Exception as e:
            print(f"‚ùå Error durante la ejecuci√≥n: {e}")
        finally:
            pygame.quit()
            print("üëã ¬°Hasta luego!")

def main():
    """Funci√≥n principal"""
    try:
        viewer = BasteriaViewer('basteria2.ply')
        viewer.run()
    except Exception as e:
        print(f"‚ùå Error al inicializar: {e}")
        print("üí° Aseg√∫rate de que basteria2.ply existe en el directorio")

if __name__ == "__main__":
    main() 